{
  "name": "horat1us/yii2-criteria",
  "description": "Criteria implementation for Yii2",
  "type": "library",
  "require": {
    "php": ">=7.4",
    "yiisoft/yii2": "^2.0.35",
    "ext-pdo": "*"
  },
  "require-dev": {
    "horat1us/yii2-asset-free": "^1.0.1",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Alexander Letnikow",
      "email": "reclamme@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Horat1us\\Yii\\Criteria\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Horat1us\\Yii\\Criteria\\Tests\\": "tests/"
    },
    "files": [
      "vendor/yiisoft/yii2/Yii.php"
    ]
  },
  "config": {
    "process-timeout": 1800,
    "sort-packages": true
  },
  "scripts": {
    "lint": "./vendor/bin/phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "./vendor/bin/phpcbf --standard=PSR2 ./src ./tests",
    "cover": "./vendor/bin/phpunit --coverage-text",
    "test": "./vendor/bin/phpunit"
  }
}
